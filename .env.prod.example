# Veritabanı Ayarları
DATABASE_URL=postgresql://postgres:postgres@db:5432/microbot
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=microbot

# JWT Ayarları
SECRET_KEY=your-secure-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Uygulama Ayarları
DEBUG=False
ENVIRONMENT=production
LOG_LEVEL=INFO
ALLOWED_ORIGINS=https://example.com,https://www.example.com

# Telegram Ayarları
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_API_ID=your-telegram-api-id
TELEGRAM_API_HASH=your-telegram-api-hash
TELEGRAM_PHONE=your-telegram-phone-number

# Redis Ayarları
REDIS_URL=redis://redis:6379/0

# Gunicorn Ayarları
GUNICORN_WORKERS=4
MAX_WORKERS=8
WORKER_CONCURRENCY=10

# Yedekleme Ayarları
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE=0 0 * * *
BACKUP_S3_BUCKET=your-s3-bucket-name
BACKUP_S3_ACCESS_KEY=your-s3-access-key
BACKUP_S3_SECRET_KEY=your-s3-secret-key

# CORS Ayarları
CORS_ORIGINS=https://example.com,https://www.example.com
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# Güvenlik Ayarları
SSL_CERT_PATH=/etc/letsencrypt/live/example.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/example.com/privkey.pem 