# Veritabanı ayarları
DATABASE_URL=postgresql://postgres:password@localhost:5432/microbot
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Güvenlik
SECRET_KEY=generate_a_secure_random_key_here

# Uygulama ayarları
# Oturum dizini
SESSION_DIR=sessions

# Telegram API kimlik bilgileri
# Bu bilgileri https://my.telegram.org/ adresinden alabilirsiniz
# API_ID=your_api_id
# API_HASH=your_api_hash

# Docker ayarları
PORT=8000
HOST=0.0.0.0

# PostgreSQL Ayarları
POSTGRES_USER=postgres
POSTGRES_PASSWORD=güçlü_parola_ekleyin
POSTGRES_DB=microbot
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Uygulama Ayarları
APP_ENV=production
LOG_LEVEL=INFO
DEBUG=False
ALLOW_ORIGINS=https://example.com,https://api.example.com

# Telegram API Ayarları
TELEGRAM_API_ID=12345678
TELEGRAM_API_HASH=abcdef1234567890abcdef1234567890
TELEGRAM_BOT_TOKEN=1234567890:ABCDEFGHIJKLMNOPQRSTUVWXYZ

# Nginx Ayarları
NGINX_PORT=80
NGINX_SSL_PORT=443
SERVER_NAME=api.example.com

# Monitoring Ayarları
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=güçlü_parola_ekleyin

# Yedekleme Ayarları
BACKUP_FOLDER=/backups
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE="0 2 * * *"  # Her gün saat 2'de yedekle

# Redis Ayarları
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=güçlü_parola_ekleyin

# Güvenlik Ayarları
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
RATE_LIMIT_PER_MINUTE=100 